        <script type="text/javascript">
            $(document).ready(function() {
                $("#upload-btn").mouseover(function() {
                    $("#upload-btn").css("background-color", 'gray');
                });

                $("#upload-btn").mouseout(function() {
                    $("#upload-btn").css("background-color", 'gainsboro');
                });

                $("#upload-btn").click(function() {
                    window.location.href = 'upload.html';
                });

                if($.cookie()['username']!='null' && $.cookie()['username']!=undefined) {
                    username = $.cookie()['username'];
                    $('span.login').after('<span class="logout"><a href="#">'+username+'</a>  <a href="/registration/accounts/logout/">logout</a></span>');
                }
                else {
                    $('span.login').removeClass('hide');
                    $('span.logout').addClass('show');
                }
            });
        </script>

